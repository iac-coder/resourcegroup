pipeline {
    node "any"

    parameters {

    }

    environment {
        TERRAFORM_HOME = ""
        AZURE_CLIENT_ID = ""
        AZURE_CLIENT_SECRET = ""
        AZURE_TENANT_ID = ""
        AZURE_SUBSCRIPTION_ID = ""
    }   

    stages {
        stage('GIT Checkout') {
            steps {
                sh "I'm in git stage1"
            }
        }
        stage('Terraform init') {
            steps {
                sh "I'm in git stage2" 
            }
        }
        stage('Terraform validate') {
            steps {
                sh "I'm in git stage3"
            }
        }
        stage('Terraform plan') {
            steps {
                sh "I'm in git stage4"
            }
        }
        stage('Terraform apply') {
            steps {
                sh "I'm in git stage5"
            }
        }
    }
}
